{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "es2020"
  },
  "include": [".github/scripts/**/*.ts", "./src/**/*.ts"],
  "exclude": ["./dist"]
}
